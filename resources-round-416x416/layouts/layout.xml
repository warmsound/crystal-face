	<!-- Shown in low power mode -->
	<layout id="AlwaysOn">
		<drawable id="AlwaysOnDisplay" class="AlwaysOnDisplay">
			<param name="burnInYOffsets">[-60, -30, 30, 60]</param>
			<param name="adjustY">-4</param>
			<param name="timeY">179</param>
			<param name="lineY">230</param>
