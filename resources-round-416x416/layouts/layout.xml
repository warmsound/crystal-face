			<param name="stroke">14</param>
			<param name="height">277</param>
			<param name="separator">3</param>
		</drawable>

		<drawable id="RightGoalMeter" class="GoalMeter">
			<param name="side">:right</param>
			<param name="stroke">14</param>
			<param name="height">277</param>
			<param name="separator">3</param>
		</drawable>

		<drawable id="DataArea" class="DataArea">
			<param name="locX">136</param>
			<param name="width">144</param>
			<param name="row0Y">310</param>
			<param name="row1Y">336</param>
			<param name="row2Y">362</param>
			<param name="goalIconY">331</param>
			<param name="goalIconLeftX">92</param>
			<param name="goalIconRightX">324</param>
		</drawable>

		<drawable id="DataFields" class="DataFields">
			<param name="left">134</param>
			<param name="right">282</param>
			<param name="top">44</param>
			<param name="bottom">78</param>
			<param name="batteryWidth">49</param>
		</drawable>

		<drawable id="Date" class="DateLine">
			<param name="y">127</param>
		</drawable>

		<drawable id="Indicators" class="Indicators">
			<param name="locX">49</param>
			<param name="locY">208</param>
			<param name="spacingY">51</param>
			<param name="batteryWidth">41</param>
		</drawable>

		<drawable id="Time" class="ThickThinTime">
			<param name="adjustY">-4</param>
			<param name="secondsX">291</param>
			<param name="secondsY">252</param>
		</drawable>

		<drawable id="MoveBar" class="MoveBar">
			<param name="x">88</param>
