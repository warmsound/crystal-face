			<param name="rowMY">261</param>
			<param name="row0Y">285</param>
			<param name="row1Y">309</param>
			<param name="row2Y">333</param>
			<param name="goalIconY">303</param>
			<param name="goalIconLeftX">29</param>
			<param name="goalIconRightX">291</param>
		</drawable>

		<drawable id="DataFields" class="DataFields">
			<param name="left">87</param>
			<param name="right">234</param>
