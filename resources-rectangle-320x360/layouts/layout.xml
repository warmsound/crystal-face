	<!-- Shown in low power mode -->
	<layout id="AlwaysOn">
		<drawable id="AlwaysOnDisplay" class="AlwaysOnDisplay">
			<param name="burnInYOffsets">[-57, -29, 29, 57]</param>
			<param name="adjustY">-2</param>
