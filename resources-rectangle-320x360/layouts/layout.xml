		<drawable id="Indicators" class="Indicators">
			<param name="locX">32</param>
			<param name="locY">189</param>
			<param name="spacingY">48</param>
			<param name="batteryWidth">27</param>
		</drawable>

		<drawable id="Time" class="ThickThinTime">
