<resources>
	<layout id="WatchFace">
		<drawable class="Background" />

		<drawable id="LeftGoalMeter" class="GoalMeter">
			<param name="side">:left</param>
			<param name="stroke">9</param>
			<param name="height">240</param>
			<param name="separator">2</param>
		</drawable>

		<drawable id="RightGoalMeter" class="GoalMeter">
			<param name="side">:right</param>
			<param name="stroke">9</param>
			<param name="height">240</param>
			<param name="separator">2</param>
		</drawable>

		<drawable id="DataArea" class="DataArea">
			<param name="locX">49</param>
			<param name="width">142</param>
			<param name="row1Y">206</param>
			<param name="row2Y">222</param>
			<param name="goalIconY">202</param>
			<param name="goalIconLeftX">22</param>
			<param name="goalIconRightX">218</param>
		</drawable>

		<drawable id="DataFields" class="DataFields">
			<param name="left">65</param>
			<param name="right">175</param>
			<param name="top">20</param>
			<param name="bottom">41</param>
			<param name="batteryWidth">28</param>
		</drawable>

		<drawable id="Date" class="DateLine">
			<param name="y">72</param>
		</drawable>

		<drawable id="Indicators" class="Indicators">
			<param name="locX">24</param>
			<param name="locY">126</param>
			<param name="spacingY">32</param>
			<param name="batteryWidth">20</param>
		</drawable>

		<drawable id="Time" class="ThickThinTime">
			<param name="adjustY">2</param>
			<param name="secondsX">172</param>
			<param name="secondsY">155</param>
			<param name="amPmOffset">6</param>
		</drawable>

		<drawable id="MoveBar" class="MoveBar">
			<param name="x">40</param>
